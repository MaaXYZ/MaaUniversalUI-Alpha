{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "muu-alpha",
  "outputfilename": "muu-alpha",
  "frontend:install": "bun install",
  "frontend:build": "bun run build",
  "frontend:dev:watcher": "bun run dev",
  "frontend:dev:serverUrl": "auto",
  "postBuildHooks": {
    "windows/*": "go run ../../scripts/copy-deps -C ../..",
    "linux/*": "go run ../../scripts/copy-deps -C ../..",
    "darwin/*": "go run ../../scripts/copy-deps -C ../.. -o build/bin/muu-alpha.app/Contents/MacOS"
  },
  "author": {
    "name": "dongwlin",
    "email": "dongwlin@hotmail.com"
  }
}
